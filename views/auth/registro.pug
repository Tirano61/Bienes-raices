
extends ../layouts/index


block contenido 
  div.py-10 
    h1.text-4xl.my-10.font-extrabold.text-center Bienes 
      span.font-normal Raices
    h2.text-center.text-2xl=pagina 


    if errores 
      div(class="max-w-md mx-auto my-10")
        each error in errores 
          p(class="bg-red-600 text-white uppercase text-xs text-center p-2 mb-1 font-bold")= error.msg 


    div(class="mt-8 mx-auto max-w-md")
      div(class="bg-white py-8 px-4 shadow rounded-lg")
        form(action="/auth/registro", class="space-y-5", method="POST") 
          input(type="hidden" name="_csrf" value=csrfToken)
          div 
            label(class="block text-sm uppercase text-gray-500 mb-2 font-bold", for="nombre") Tu nombre
            input(id="nombre", 
              class="w-full px-3 py-2 border border-gray-500 rounded-md placeholder-gray-400", 
              placeholder="Tu nombre"
              type="text" name="nombre"
              value=usuario ? usuario.nombre : ''
            )
          div
            label(class="block text-sm uppercase text-gray-500 mb-2 font-bold", for="email") Email
            input(id="email", 
              class="w-full px-3 py-2 border border-gray-500 rounded-md placeholder-gray-400", 
              placeholder="Tu email"
              type="email" name="email"
              value= usuario ? usuario.email : ''
            )
          div
            label(class="block text-sm uppercase text-gray-500 mb-2 font-bold", for="password") Password
            input(id="password", 
              class="w-full px-3 py-2 border border-gray-500 rounded-md placeholder-gray-400", 
              placeholder="Tu password"
              type="password" name="password"
            )
          div
            label(class="block text-sm uppercase text-gray-500 mb-2 font-bold", for="repetir_password") Repetir Password
            input(id="repetir_password", 
              class="w-full px-3 py-2 border border-gray-500 rounded-md placeholder-gray-400", 
              placeholder="Repete tu password"
              type="password" name="repetir_password"
            )
          
          div(class="flex items-center justify-between")
            a(href="/auth/login" class="text-gray-500 text-xs hover:text-indigo-700 cursor-pointer") ¿Ya tienes cuenta inicia sesión?
            a(href="/auth//olvide-password" class="text-gray-500 text-xs hover:text-indigo-700 cursor-pointer") ¿Olvidaste tu password?

          input(type="submit" value="Crear Cuenta" 
            class="w-full bg-indigo-600 hover:bg-indigo-800 text-white font-bold py-3 cursor-pointer"
          )
