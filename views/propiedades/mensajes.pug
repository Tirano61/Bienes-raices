
extends ../layouts/admin


block contenido 

    h2.text-center.text-2xl=pagina 

    a(href="/mis-propiedades", 
      class="mt-3 rounded-md px-4 py-2 bg-indigo-600 hover:bg-indigo-800 text-sm text-center font-bold text-white uppercase inline-block w-full sm:w-auto") Volver
    //p= JSON.stringify(mensajes, null, 2)
    div(class="mx-auto max-w-4xl  my-2")
        if mensajes.length 
            ul 
                each mensaje in mensajes 
                    li(class="border-gray-200 border p-5 mb-4 rounded-sm shadow")
                        p(class="font-bold text-gray-800 text-xs") Nombre: 
                            span(class="font-normal ")= mensaje.usuario.nombre
                        p(class="font-bold text-gray-800 mb-2 text-xs") Email: 
                            span(class="font-normal")= mensaje.usuario.email

                        p(class="font-bold text-gray-800") Mensaje: 
                            span(class="font-normal")= mensaje.mensaje    
                        p(class="font-bold text-gray-800 text-xs mt-2") Enviado: 
                            span(class="font-normal text-xs")= formatearFecha( mensaje.createdAt)     
        else 
            p(class="text-center text-gray-600 p-5")