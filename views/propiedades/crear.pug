extends ../layouts/index

block styles
  link(rel="stylesheet" href="https://unpkg.com/leaflet@1.8.0/dist/leaflet.css")

block contenido 
  div.py-10 
    h1.text-4xl.my-10.font-extrabold.text-center Bienes 
      span.font-normal Raices
    h2.text-center.text-2xl=pagina 

    div(class="bg-white shadow py-8 px-4 rounded mx-auto max-w-4xl my-10 md:px-10")
      form.space-y-8(method="POST"  action="/propiedades/crear")
        input(type="hidden" name="_csrf" value= csrfToken)
        div.space-y-8
          h3.text-lg.leading-6.font-medium.text-gray-900 Información General
          p.text-gray-600 Añade información de la propiedad a la venta
          div
            label(class="block text-sm uppercase text-gray-500 mb-2 font-bold", for="titulo") Titulo de anuncio
            input(id="titulo", 
              class="w-full px-3 py-2 border border-gray-500 rounded-md placeholder-gray-400", 
              placeholder="Título de la propiedad, ej: Casa en la playa"
              type="text" name="titulo") 
          div
            label(class="block text-sm uppercase text-gray-500 mb-2 font-bold", for="descripcion") descripcion
            textarea(id="descripcion", 
              class="w-full px-3 py-2 border border-gray-500 rounded-md placeholder-gray-400", 
              placeholder="Descripción de la propiedad", name="descripcion") 
            
          div(class="md:flex md:gap-4 space-y-5 md:space-y-0")  
            //-! Categoria
            div(class="md:w-1/2")
              label(class="block text-sm uppercase text-gray-500 mb-2 font-bold", for="categoria") Categoria
              select(id="categoria", 
                class="w-full px-3 py-2 border border-gray-500 rounded-md placeholder-gray-400", 
                name="categoria")  
                option(value="") - Seleccione -
                each categoria in categorias 
                  option(value=categoria.id)= categoria.nombre

            //-! Precios    
            div(class="md:w-1/2")
              label(class="block text-sm uppercase text-gray-500 mb-2 font-bold", for="precio") Precio
              select(id="precio", 
                class="w-full px-3 py-2 border border-gray-500 rounded-md placeholder-gray-400", 
                name="categoria")  
                option(value="") - Seleccione -
                each precio in precios 
                  option(value=precio.id)= precio.nombre

          //-! cantidd de habitaciones
          div(class="md:flex md:gap-4 space-y-5 md:space-y-0")  
            div(class="md:w-1/3")
              label(class="block text-sm uppercase text-gray-500 mb-2 font-bold", for="habitaciones") Habitaciones
              select(id="habitaciones", 
                class="w-full px-3 py-2 border border-gray-500 rounded-md placeholder-gray-400", 
                name="habitaciones")  
                option(value="") - Seleccione - 
                - let n = 1;
                  while n < 6
                    option(value=n) #{n++}    
            //-! cantidad de estacionamiento  
            div(class="md:w-1/3")
              label(class="block text-sm uppercase text-gray-500 mb-2 font-bold", for="estacionamiento") estacionamiento
              select(id="estacionamiento", 
                class="w-full px-3 py-2 border border-gray-500 rounded-md placeholder-gray-400", 
                name="estacionamiento")  
                option(value="") - Seleccione -
                - let ne = 1;
                  while ne < 5
                    option(value=ne) #{ne++}    
            //-! cantidad de baños
            div(class="md:w-1/3")
              label(class="block text-sm uppercase text-gray-500 mb-2 font-bold", for="wc") wc
              select(id="wc", 
                class="w-full px-3 py-2 border border-gray-500 rounded-md placeholder-gray-400", 
                name="wc")  
                option(value="") - Seleccione - 
                - let nw = 1;
                  while nw < 5
                    option(value=nw) #{nw++}    
          div(class="border-gray-200 border-t py-3 space-y-5")
            h3.text-lg.leading-6.font-medium.text-gray-900 Ubicación 
            p.text-gray-600 Ubica la propiedad en el mapa        
            //-! Mapa
            div(id="mapa" class="h-96")

            div
              p.calle 
            input(type="hidden" name="calle" id="calle")
            input(type="hidden" name="lat" id="lat")
            input(type="hidden" name="lng" id="lng")

          input(class="w-full py-3 bg-indigo-500 hover:bg-indigo-700 rounded text-white font-bold uppercase cursor-pointer" 
            type="submit" value="Añadir imagen")
block scripts
    script(src="https://unpkg.com/leaflet@1.8.0/dist/leaflet.js")
    script(src="https://unpkg.com/esri-leaflet@3.0.8/dist/esri-leaflet.js")
    script(src="https://unpkg.com/esri-leaflet-geocoder@2.2.13/dist/esri-leaflet-geocoder.js")
    script(src="https://cdnjs.cloudflare.com/ajax/libs/leaflet-geosearch/2.7.0/bundle.min.js")
    script(src="/js/mapa.js") 